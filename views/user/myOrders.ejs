    <table>
      <thead>
        <tr>
          <th>PRODUCT IMAGES</th>
          <th>PRODUCT NAME</th>
          <th>ORDERED</th>
          <th>STATUS</th>
          <th>TOTAL</th>
          <th>COUPON OFFER</th>
          <th>METHOD</th>
          <th>MANAGE</th>
        </tr>
      </thead>
      <tbody>
        <!-- Example order row, repeat this for each order -->
        <% orders.forEach((order)=>{ %>
            <% order.products.forEach((product)=>{ %>
         <tr>
          <td><img src="productImages/<%= product.productId.image[0] %>" alt="" width="50" style="width:80px; height:80px;"></td>
          <td><%= product.productId.productName %></td>
          <td><%= order.OrderDate.toLocaleDateString() %></td>
          <td class="status-shipped"><%= product.productOrderStatus %></td>
        </td>
        <% if(product.productId.productOffer.offerApplied==true || product.productId.categoryOffer.offerApplied==true){ %>

            <td>&#8377;<%= product.productId.totalOfferPrice*product.quantity %></td>

            <% }else{ %>

          <td>&#8377;<%= product.productId.offerPrice*product.quantity %></td>

          <% } %>
          <% if (order.discountedPrice != 0){%>
            <% if(product.productId.productOffer.offerApplied==true || product.productId.categoryOffer.offerApplied==true){ %>
                <td>&#8377;<%= (product.productId.totalOfferPrice*product.quantity - totalDiscountPerProduct).toFixed() %></td>

                <% }else{ %>
          <td>&#8377;<%= (product.productId.offerPrice*product.quantity - totalDiscountPerProduct).toFixed() %></td>
          <% } %>

          <% }else{ %>
            <td>--</td>

            <% } %>

          <td><%= order.paymentMethod %></td>
          <td><a href="/orderDetail/<%= order._id %>/<%= product.productId._id %>" class="btn btn-dark" style="color: white;">Manage</a></td>
        </tr>
        <% }); %>
        <% }); %>

        <% } %>
        <!-- Repeat the above row for each order -->
      </tbody>
    </table>

  <script>
     async function editOffer(offerId){

const offer = {
offerName : document.getElementById('couponName').value.trim(),
discountPercentage:document.getElementById('discountAmount').value.trim(),
validFrom:document.getElementById('validFrom').value.trim(),
validTo:document.getElementById('validTo').value.trim(),

}
    fetch('/admin/offerEdit',{
      method:"POST",
      headers:{'Content-Type':'application/json'},
      body:JSON.stringify({offer,offerId})
    }).then(response=>response.json())
                   .then(data=>{
                   if(data.success){
                    window.location.href ="/admin/offers"
                   }else{
            // Handle error case 
            console.error('Error:', data.error);

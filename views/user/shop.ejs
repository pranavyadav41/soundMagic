          showConfirmButton: false,
          timer: 1500,
        });
            
        }else if(data.error==="Product is out of stock"){
            Swal.fire({
          icon: 'error',
          title: 'The product is out of stock',
          showConfirmButton: false,
          timer: 1500,
        });

        }
    })
           
            throw new Error(`HTTP error! Status: ${response.status}`);
        }
        return response.json();
    })
    .then(data => {
        if (data.success) {
            Swal.fire({
          icon: 'success',
          title: 'Product added to wishlist',
          showConfirmButton: false,
          timer: 1500,
        });
            

            // Optionally, update your UI or trigger additional actions
        }else{
           
            console.error("Failed to add to wishlist:", data.message);
            // Handle the error, show a message, or perform other actions

        }
    })
    .catch(error => {
        console.error("Error during addToWish:", error.message);
        // Log the error or handle it appropriately
    });
}
</script>
<script>
    function redirectToSelected() {
        var selectElement = document.getElementById("tingu");
        var selectedValue = selectElement.options[selectElement.selectedIndex].value;
        window.location.href = selectedValue;
    }


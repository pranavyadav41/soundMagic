    <div class="container">
        <form action=""  method="POST" enctype="multipart/form-data">
            <label for="productName">Product Name:</label>
            <input type="text" id="productName" name="productName" value="<%= product. productName %>" required>

            <label for="price">Offer Price:</label>
            <input type="number" id="price" name="offerPrice" min="0" step="0.01" value="<%= product.offerPrice %>" required>


            <label  for="description">Description:</label>
            <textarea style="border-radius: 5px; border: 1px solid #ced4da;" id="description"  name="description" rows="4" required><%= product.description %></textarea>

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" min="0"  value="<%= product.stock %>" required>

            <label for="category">Category:</label>
            <select id="category" name="category"  value="<%= product.category %>" required>
                <% categories.forEach(category => { %>
                    <option value="<%= category.name %>"><%= category.name %></option>
                <% }); %>
            </select>
             <!-- Display existing images -->
        <label for="existingImages">Existing Images:</label>
        <div id="existingImagesContainer">
            <% if (product.image && product.image.length > 0) { %>
                <% product.image.forEach(image => { %>
                    <img src="/productImages/<%= image %>" alt="Product Image" style="max-width: 100px; margin-right: 10px;">
                <% }); %>
            <% } else { %>
                <p>No existing images</p>
            <% } %>
        </div>


            <!-- Add multiple image upload option -->
            <label for="productImages">Product Images (up to 4):</label>
            <div class="custom-file-upload" onclick="document.getElementById('imagesInput').click()">
                Upload Images
            </div>
            <input type="file" id="imagesInput" name="image" accept="image/*" multiple style="display: none;"  value="<%= product.image %>" multiple>

            <button type="submit">Update</button>
        </form>

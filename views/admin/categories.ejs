      <div class="container">
        <form action="">
        <div class="add-category">
          <input type="text" id="categoryName" placeholder="Enter category name" name="name" autocomplete="name required">
          <button type="submit" onclick="addCategory()">Add Category</button>
        </div>
        <div id="categoryExistsMessage" style="color: red;"></div>

        </form>
    
        <h2>All Categories</h2>
        <ul id="categoryList" class="category-list">
          <% categories.forEach(category => { %>
           
            <li>
              <div class="category-container">
                <span class ="category-name" data-category-id="<%= category._id %>"><%= category.name %></span>
                <% if(category.offer.offerApplied==true){ %>
                <p class="mt-3">OFFER:<strong><%= category.offer.offerName %></strong></p>
                <button class="btn btn-danger btn-sm " onclick="removeOffer('<%= category._id %>')">remove</button>
                <% } %>
                <div class="action-buttons">
                  <!-- <form action="admin/categories/edit/<%= category._id %>" method="GET"> -->
                  <form action="categories/edit/<%= category._id %>" method="GET">
                  <button class="edit-button"  type="submit">Edit</button>
                  </form>
                  <button class="unlist-button" data-category-id ="<%= category._id %>" data-state="<%= category.isListed ? 'true' : 'false' %>" ><%= category.isListed ? 'UnList' : 'List' %></button>
                  <!-- onclick="handleUnlist('<%= category.name %>')" -->
                  <button class="edit-button" style="background-color: black;" onclick="applyOffer('<%= category._id %>')">Apply offer</button>
                </div>
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
     
 

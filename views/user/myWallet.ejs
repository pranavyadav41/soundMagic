            margin: 0;
            padding: 0;
            height: 100vh;
        }

        .wallet-container {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 600px;
            width: 100%;
            display: flex;
            margin-left: 450px;
            flex-direction: column;
        }

        .wallet-header {
            background-color: #a2a5a2;
            color: #fff;
            padding: 20px;
            text-align: center;
            font-size: 24px;
        }

        .wallet-balance {
            font-size: 28px;
            margin: 20px;
            text-align: center;
            color: #000000;
        }

        .wallet-history {
            padding: 20px;
            overflow-y: auto;
        }

        .transaction-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #ecf0f1;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            transition: transform 0.3s ease;
        }

        .transaction-item:hover {
            transform: scale(1.02);
        }

        .transaction-type {
            font-weight: bold;
            color: #3498db;
            margin-right: 10px;
        }

        .amount {
            color: #e74c3c;
            font-weight: bold;
            margin-right: 10px;
        }

        .date {
            color: #7f8c8d;
            font-size: 14px;
        }

        @media (max-width: 600px) {
            .wallet-container {
                border-radius: 0;
            }
        }
    </style>

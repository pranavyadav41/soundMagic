        <div class="section">
            <h2>Order Details</h2>
            <p><strong>Date:</strong><%= orders.OrderDate.toLocaleDateString() %></p>
            <p><strong>Order ID:</strong><%= orders.orderId %></p>
            <p><strong>Payment Method:</strong><%= orders.paymentMethod %></p>
        </div>
    
        <!-- Delivery Address Section -->
        <div class="section">
            <h2>Delivery Address</h2>
            <p><strong>Name:</strong><%= orders.shippingAddress.fullname %></p>
            <p><strong>Mobile:</strong><%= orders.shippingAddress.mobile %></p>
            <p><strong>Address:</strong><%= orders.shippingAddress.address %></p>
            <p><strong>City:</strong><%= orders.shippingAddress.city %></p>
            <p><strong>State:</strong><%= orders.shippingAddress.state %></p>
            <p><strong>Pincode:</strong><%= orders.shippingAddress.pincode %></p>
        </div>
    
        <!-- Product List Section -->
        <div class="section">
            <h2>Product List</h2>
            <table>
                <thead>
                <tr>
                    <th>NO</th>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Quantity</th> 
                    <th>Total Amount</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                  <% orders.products.forEach((product,index)=>{%>
                <tr>
                    <td><%= index+1 %></td>
                    <td><img src="/productImages/<%= product.productId.image[0] %>" style="width:70px;height:70px;"></img></td>
                    <td><%= product.productId.productName %></td>
                    <td><%= product.quantity %></td>
                    <% if (orders.discountedPrice != 0){%>
                      <% if(product.productId.productOffer.offerApplied==true || product.productId.categoryOffer.offerApplied==true){ %>
                          <td>&#8377;<%= (product.productId.totalOfferPrice*product.quantity - totalDiscountPerProduct).toFixed() %></td>
          
                          <% }else{ %>
                    <td>&#8377;<%= (product.productId.offerPrice*product.quantity - totalDiscountPerProduct).toFixed() %></td>
                    <% } %>
          
                    <% }else{ %>
                      <td>&#8377;<%= (product.productId.offerPrice*product.quantity - totalDiscountPerProduct).toFixed() %></td>
          
                      <% } %>
                    <% if(product.productOrderStatus=='Cancelled'){ %>

                      <td style="color:red;">Cancelled</td>


                      <% }else if(product.productOrderStatus=='Returned'){ %>

                        <td style="color:red;">Returned</td>


                        <%}else{%>
                    <td>
                        <select class="status-dropdown" id="orderStatus<%= index %>" data-product-id="<%= product.productId._id %>" data-order-id="<%= orders._id %>">
                            <option value="order-placed">Order Placed</option>
                            <option value="shipped">Shipped</option>
                            <option value="delivered">Delivered</option>
                        </select>
                    </td>
                    <% } %>
                </tr>
                <!-- Add more rows as needed -->
                <% }) %>
                </tbody>
            </table>
        </div>

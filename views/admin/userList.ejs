      <h1>User Details</h1>
      <form>
      <div class="search-container">
        <input type="text" class="search-box" placeholder="Search..." name="search">
        <button type="Submit" class="search-button">Search</button>
    </div>
    </form>
    
    <table>
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Verified</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% user.forEach((user, index) => { %>
                <tr class="<%= index % 2 === 0 ? 'even-row' : 'odd-row' %>">
                    <td><%= user.firstname %></td>
                    <td><%= user.lastname %></td> 
                    <td><%= user.email %></td>
                    <td><%= user.mobile %></td>
                    <td><%= user.isVerified ? 'Yes' : 'No' %></td>
                    <td>
                      <button class="action-button"  data-user-id ="<%= user._id %>"  data-state="<%= user.isBlocked ? 'true' : 'false' %>">
                          <%= user.isBlocked ? 'Unblock' : 'Block' %>
                      </button>
                      <!-- Add other action buttons as needed -->
                  </td>
                </tr>
            <% }); %>
         
            
          
        </tbody> 
       
    </table><br>
    <nav aria-label="Page navigation example"> 
      <ul class="pagination">
        <% previous = (currentPage > 1) ? currentPage - 1 : 1;
        next = (currentPage < totalPages) ? currentPage + 1 : totalPages; %>

        <li class="page-item"><a class="page-link" href="?page=<%= previous %>">previous</a></li>
        <% for(let j=1;j<=totalPages;j++){ %>
        <li class="page-item"><a class="page-link" href="?page=<%= j %>"><%= j %></a></li>
        <% } %>
        <li class="page-item"><a class="page-link" href="?page=<%= next %>">next</a></li>

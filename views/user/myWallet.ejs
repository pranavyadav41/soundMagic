            My Wallet
        </div>
      
      
        <div class="wallet-balance">
            Balance: &#8377;<%= wallet[0].balance %>
        </div>
        <div class="wallet-history">
            <% wallet[0].history.forEach((data)=>{ %>
           
            <div class="transaction-item">
                <% if(data.type=="Credit"){ %>
                <span class="transaction-type" style="color: green;"><%= data.type %></span>
                <span class="amount" style="color: green;">+ &#8377;<%= data.amount %></span>
                <span class="date" style="color: green;"><%= data.date.toLocaleDateString() %></span>
                <% }else if(data.type=="Debit"){ %>

                    <span class="transaction-type" style="color:red;"><%= data.type %></span>
                    <span class="amount" style="color: red;">-  &#8377;<%= data.amount %></span>
                    <span class="date" style="color:red;"><%= data.date.toLocaleDateString() %></span>

                    <% } %>
            </div>
            <% }); %>
           
        </div>
     

            

           
    </div>
    <% }else{ %>


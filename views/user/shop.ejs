    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        <div class="shop__sidebar__search">
                            <form>
                                <input type="text" name="search" placeholder="Search...">
                                <button type="submit"><span class="icon_search"></span></button>
                            </form>
                        </div>
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__categories">
                                                <ul class="nice-scroll">
                                                    <% for(let i=0;i< category.length; i++){%>
                                                        <li><a href="/shop?id=<%= category[i]._id %>">
                                                            <%= category[i].name %>
                                                        </a></li>
                                                        <%}%>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__left">
                                    <h5><b>All Products</b></h5>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right" >
                                    <p>Sort by Price:</p>
                                    <select id="tingu" onchange="redirectToSelected()">
                                        <option value="/shop?sort=asc">Low To High</option>
                                        <option value="/shop?sort=desc">High To Low</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                         <% products.forEach((product, index) => { %>
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg">
                                        <a href="/productDetail?id=<%= product._id %>">
                                            <img  src="/productImages/<%= product.image[0] %>" style="height:262.5pxp; width:260px;" alt=""> 
                                        </a>
                                        <% if(product.productOffer.offerApplied==true){ %>
                                    <span class="label" style="background-color: black; color:white;"><%= product.productOffer.offerPercentage %>% OFF</span>  

                                        <% }
                                        if(product.categoryOffer.offerApplied==true){ %>

                                            <span class="label" style="background-color: black; color:white;"><%= product.categoryOffer.offerPercentage %>% OFF</span>


                                            <% }
                                            if(product.productOffer.offerApplied==true && product.categoryOffer.offerApplied==true ){ %>

                                                <span class="label" style="background-color: black; color:white;"><%= product.productOffer.offerPercentage+product.categoryOffer.offerPercentage %>% OFF</span>

                                                <% } %>
                                        <ul class="product__hover">
                                            <li><a href="" onclick="addToWish('<%= product._id %>')"><img src="img/icon/heart.png" alt=""></a></li>
                                        </ul>
                                    
                                    </div>
                                    <% if(product.stock>0){ %>
                                    <div class="product__item__text">
                                        <h6><%= product.productName %></h6>
                                        <a href="" onclick="addToCart('<%= product._id %>')" class="add-cart">+ Add To Cart</a>
                                        <% if(product.productOffer.offerApplied==true || product.categoryOffer.offerApplied==true){ %>

                                            <h5><span style="font-weight: lighter;"><strike>₹ <%= product.offerPrice %></strike></span> ₹ <%= product.totalOfferPrice %></h5>

                                            <% }else{ %>

                                        <h5>₹ <%= product.offerPrice %></h5>

                                           <% } %>
                                    </div>
                                    <% }else{ %>
                                        <div class="product__item__text">
                                            <h6><%= product.productName %></h6>
                                            <a class="add-cart" style="cursor:pointer;color: red;">Out of stock</a>
                                            <h5>₹ <%= product.actualPrice %></h5>
                                        </div>
                                        <% } %>

                                </div>
                            </div>
                            <% if ((index + 1) % 3 === 0 ) { %>
                        </div> 
                        <div class="row">
                            <% } %>


                        <% }) %>
                    </div>
                    

            </div>
        </div> 
        <div class="row">
            <div class="col-lg-12">
                <div class="product__pagination">
                    <% previous = (currentPage > 1) ? currentPage - 1 : 1;
                    next = (currentPage < totalPages) ? currentPage + 1 : totalPages; %>
                    <a  href="?page=<%= previous %>" style="background-color: bisque;">PREV</a><span></span>
                    <% for(let j=1;j<=totalPages;j++){ %>
                   
                    <a  href="?page=<%= j %>"><%= j %></a>

                    <% } %>
                   
                    <a  href="?page=<%= next %>" style="background-color: bisque;">NEXT</a>
                </div>
            </div> 
        </div>

    </section>
    <!-- Shop Section End -->

